#type vertex
#version 450 core
layout (location = 0) in vec3 aPos;

void main()
{
     gl_Position = vec4(aPos, 1.0);
}

#type fragment
#version 450 core
layout(location = 0) out vec4 FragColor;

layout (std140, binding = 0) uniform Props
{
	bool is_1 ;
};

void main()
{
    if(is_1)
    {
        FragColor = vec4(vec3(1.0), 1.0);
    }
    else FragColor = vec4(vec3(0.0), 1.0);
}